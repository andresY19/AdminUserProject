@model Queue.Models.Agent_Configuration

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdCompany)

    <div id="divblock" class="row">
        <div class="col-lg-12 col-12">

            <div class="box">
                <div class="box-header with-border">
                    <h4 class="box-title">Create Configuration</h4>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("Edit", "Agent_Empresa", new { id = Model.IdCompany })" class="btn btn-info btn-block m-t-10 float-right">
                        <i></i> Back
                    </a>
                </div>

                <div class="box-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.InactivityPeriod, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.InactivityPeriod, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.InactivityPeriod, new { htmlAttributes = new { @class = "form-control required" } })
                                </div>
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.UploadFrecuency, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.UploadFrecuency, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.UploadFrecuency, new { htmlAttributes = new { @class = "form-control required" } })

                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.CaptureFrecuency, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.CaptureFrecuency, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.CaptureFrecuency, new { htmlAttributes = new { @class = "form-control required" } })
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

                <div class="form-actions">
                    <div class="d-flex flex-row-reverse">
                        <div class="p-2">
                            <button id="add_company" name="add_dictionary" type="submit" value="Create" class="btn btn-info waves-effect waves-light btn-block">
                                Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
}