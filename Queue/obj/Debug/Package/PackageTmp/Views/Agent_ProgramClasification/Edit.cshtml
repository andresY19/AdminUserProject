@model Queue.Models.Agent_ProgramClasification

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Edit", "Agent_ProgramClasification", FormMethod.Post, new { id = "frm_register" }))
{
    @Html.AntiForgeryToken()

    <div id="divblock" class="row">
        <div class="col-lg-12 col-12">
            @Html.HiddenFor(model => model.idprogramclasification)
            @Html.HiddenFor(model => model.name)
            <div class="box">
                <div class="box-header with-border">
                    <h4 class="box-title">Editar clasificación de programas</h4>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("Index", "Agent_ProgramClasification")" class="btn btn-info btn-block m-t-10 float-right">
                        <i class="glyphicon glyphicon-chevron-left"></i> Atras
                    </a>
                </div>

                <div class="box-body">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.DropDownList("name", null, htmlAttributes: new { @class = "form-control", autocomplete = "off", @disabled = "disabled" })
                                </div>
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.clasification, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.clasification, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    <select id="clasification" name="clasification" class="form-control">
                                        <option value="1">Productiva</option>
                                        <option value="2">Inproductiva</option>
                                        <option value="3">Neutral</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <div class="d-flex flex-row-reverse">
                        <div class="p-2">
                            <button id="add_company" name="add_dictionary" type="submit" value="Create" class="btn btn-info waves-effect waves-light btn-block">
                                Edit
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
     $(document).ready(function () {
         var clasification_ = '@ViewBag.clasification';
         var name_ = '@ViewBag.name_';
         $("#clasification").val(clasification_);
         $("#name").val(name_);
     });
</script>