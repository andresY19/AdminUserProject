@model IEnumerable<Queue.ViewModels.UserListViewModel>


@{
    ViewBag.Title = "Index";
    var _islogged = "Looged";
}


<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card">
            <div class="box-header with-border">
                <h4 class="box-title">Users</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                    </div>
                    <br />
                    <br />
                    <br />

                    <div class="col-md-2">
                        <a href="@Url.Action("Register", "Account")" class="btn btn-info btn-sm m-t-10 float-right">
                            <i class="fa fa-plus"></i> New User
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="myTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Is Logged</th>
                                <th>Role</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                _islogged = item.IsLoged ? "Logged" : "False";
                                <tr>
                                    <td>
                                        <a id="idiom_@Html.DisplayFor(modelItem => item.Id)" class="qx_black_link" href="@Url.Action("EditUser", "Manage", new { id = item.Id })"> @Html.DisplayFor(modelItem => item.Email)</a>
                                    </td>
                                    <td>
                                        <a id="idiom_@Html.DisplayFor(modelItem => item.Id)" class="qx_black_link" href="@Url.Action("EditUser", "Manage", new { id = item.Id })"> @Html.DisplayFor(modelItem => item.FirstName)</a>
                                    </td>
                                    <td>
                                        <a id="idiom_@Html.DisplayFor(modelItem => item.Id)" class="qx_black_link" href="@Url.Action("EditUser", "Manage", new { id = item.Id })"> @Html.DisplayFor(modelItem => item.LastName)</a>
                                    </td>
                                    <td style="text-align:center">
                                        @if (item.IsLoged)
                                        {
                                            <a id="idiom_@Html.DisplayFor(modelItem => item.Id)" class="text-success" href="@Url.Action("EditUser", "Manage", new { id = item.Id })"> @_islogged </a>

                                        }
                                        else
                                        {
                                            <a id="idiom_@Html.DisplayFor(modelItem => item.Id)" class="qx_black_link" href="@Url.Action("EditUser", "Manage", new { id = item.Id })"> @_islogged </a>

                                        }
                                    </td>
                                    <td style="text-align:center">
                                        <a id="idiom_@Html.DisplayFor(modelItem => item.Id)" class="qx_black_link" href="@Url.Action("EditUser", "Manage", new { id = item.Id })"> @Html.DisplayFor(modelItem => item.Role) </a>
                                    </td>
                                    <td style="text-align:center">
                                        <a class="btn btn-outline-secondary" href="@Url.Action("EditUser", "Manage", new { id = item.Id })"><i class="fa fa-edit"></i></a>
                                        @*<a class="btn btn-outline-secondary" href="@Url.Action("Delete", "Idioms", new { id = item.Id })"><i class="fas fa-trash"></i></a>*@

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {



    <script src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.print.min.js"></script>
    <script>
        $('#myTable').DataTable();
    </script>
}
