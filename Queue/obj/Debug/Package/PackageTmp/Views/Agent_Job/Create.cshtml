@model Queue.Models.Agent_Job

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/assets/vendor_components/bootstrap-switch/switch.css" rel="stylesheet" />
@using (Html.BeginForm("Create", "Agent_Job", FormMethod.Post, new { id = "frm_register" }))
{
    @Html.AntiForgeryToken()

    <div id="divblock" class="row">
        <div class="col-lg-12 col-12">

            <div class="box">
                <div class="box-header with-border">
                    <h4 class="box-title">Agregar Cargo</h4>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("Index", "Agent_Job")" class="btn btn-info btn-block m-t-10 float-right">
                        <i class="glyphicon glyphicon-chevron-left"></i> Atras
                    </a>
                </div>

                <div class="box-body">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.Cargo, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.Cargo, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Cargo, new { htmlAttributes = new { @class = "form-control required" } })
                                </div>
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control required" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <hr />
                    <h4>Horarios</h4>
                    <br />

                    <div class="form-group">
                        <div class="row">
                            <div class="col-4">
                                <input type="checkbox" id="Lunes" name="Lunes" class="filled-in chk-col-green" />
                                <label for="Lunes">Lunes</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="bootstrap-timepicker" id="datetimepicker1">
                                    @Html.LabelFor(model => model.HorarioIniciaLunes, htmlAttributes: new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.HorarioIniciaLunes, "", new { @class = "text-danger" })
                                    <div class='input-group'>
                                        @Html.EditorFor(model => model.HorarioIniciaLunes, new { htmlAttributes = new { @class = "form-control required", @type = "Time" } })
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="bootstrap-timepicker" id="datetimepicker2">
                                    @Html.LabelFor(model => model.HorarioTerminaLunes, htmlAttributes: new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.HorarioTerminaLunes, "", new { @class = "text-danger" })
                                    <div class='input-group'>
                                        @Html.EditorFor(model => model.HorarioTerminaLunes, new { htmlAttributes = new { @class = "form-control required", @type = "Time" } })
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <div class="d-flex flex-row-reverse">
                        <div class="p-2">
                            <button id="add_company" name="add_dictionary" type="submit" value="Create" class="btn btn-info waves-effect waves-light btn-block">
                                Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
