<script>
    function calcrestperiod() {
        $("#f_dailyrestperiod").val(0);
        var hours = gethous("#dailyrestperiodstart", "#dailyrestperiodsend");
        if (hours > 0) {
            $("#f_dailyrestperiod").val(hours);
        }
    }
    function calcdailyworkinghour() {
        $("#p_dailyworkinghours").val(0);
        var hours = gethous("#dailyworkinghourstart", "#dailyworkinghourend");
        if (hours > 0) {
            $("#p_dailyworkinghours").val(hours);
        }
    }

    function gethous(a, b) {
        var start = new Date();
        start.setHours($(a).val());
        start.setMinutes(00);
        start.setSeconds(00);

        var end = new Date();
        end.setHours($(b).val());
        end.setMinutes(00);
        end.setSeconds(00);

        return end.getHours() - start.getHours();
    }
</script>