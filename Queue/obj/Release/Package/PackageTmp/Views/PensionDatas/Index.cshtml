@model IEnumerable<Queue.Models.PensionData>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutElement.cshtml";
}
<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card">
            <div class="box-header with-border">
                <h4 class="box-title">Pensioengegevens</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                    </div>
                    <br />
                    <br />
                    <br />

                    <div class="col-md-2">
                        <a href="@Url.Action("Create", "PensionDatas",new { idemployee = ViewBag.idemployee })" class="btn btn-info float-right">
                            <i class="fa fa-plus"></i> Nieuwe Pensioengegevens
                        </a>
                    </div>
                </div>
                <div class="table-responsive">

                    <table id="myTable1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employee.employeetype)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.typeinstitution)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.refisteredinkkv)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.employerpension)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.employeepension)
                                </th>                               
                                <th>Bewerk</th>
                                <th>Verwijderen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.employeetype)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.typeinstitution)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.refisteredinkkv)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.employerpension)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.employeepension)
                                </td>                                
                                <td>
                                    <a href="@Url.Action("Edit", "PensionDatas", new { id = item.idpension })"><i class="fa fa-edit"></i></a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete", "PensionDatas", new { id = item.idpension })"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.print.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#myTable1').DataTable();
             var ms = '@ViewBag.message';
            if (ms == "1") {
                Swalsuccess()
            }
        });
    </script>
}