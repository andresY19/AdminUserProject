@model IEnumerable<Queue.Models.EmployerContact>
<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card">
            <div class="box-header with-border">
                <h4 class="box-title">Contacts</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                    </div>
                    <br />
                    <br />
                    <br />
                    <div class="col-md-8">

                    </div>
                    <div class="col-md-2">
                        <a onclick="ContactViewCreate('@ViewBag.idemployer')" style="color:white" class="btn btn-info btn-block m-t-10 float-right">
                            <i class="fa fa-plus"></i> New Contact
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="myTablecontact" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employer.registrationname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.surname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.firstname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.function)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.phone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cellphone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.fax)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.email)
                                </th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Employer.registrationname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.surname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.firstname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.function)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cellphone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fax)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                    <td>
                                        <a onclick="ContactViewEdit('@item.iemployercontact')"><i class="fa fa-edit"></i></a>
                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.iemployercontact })*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
