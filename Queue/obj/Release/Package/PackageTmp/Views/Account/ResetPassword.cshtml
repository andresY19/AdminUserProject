@model Queue.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Code)

    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text bg-info border-info"><i class="ti-user"></i></span>
            </div>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control pl-15", @required = "", @placeholder = "Email" })
        </div>
    </div>

    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text bg-info border-info"><i class="ti-lock"></i></span>
            </div>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control pl-15", @type = "password", @required = "", @placeholder = "New Password" })
        </div>
    </div>

    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text bg-info border-info"><i class="ti-lock"></i></span>
            </div>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control pl-15", @required = "", @placeholder = "Confirm New Password" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-10">

        </div>
    </div>
    @*<div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Reset" />
            </div>
        </div>*@
    <div class="form-group text-center m-t-20">
        <div class="col-xs-12">
            <button class="btn btn-info btn-block text-uppercase waves-effect waves-light" onclick="block()" type="submit">Reset</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
