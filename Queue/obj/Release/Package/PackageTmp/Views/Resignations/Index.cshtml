@model IEnumerable<Queue.Models.Resignation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutElement.cshtml";
}


<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card">
            <div class="box-header with-border">
                <h4 class="box-title">Uitdiensttreding</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                    </div>
                    <br />
                    <br />
                    <br />

                    <div class="col-md-2">
                        <a href="@Url.Action("Create", "Resignations",new { idemployee = ViewBag.idemployee })" class="btn btn-info float-right">
                            <i class="fa fa-plus"></i> Nieuwe Uitdiensttreding
                        </a>
                    </div>
                </div>
                <div class="table-responsive">

                    <table id="myTable1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employee.employeetype)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.resignationdate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.reason)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.dismisalnumbre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.idtermination)
                                </th>
                                <th>Bewerk</th>
                                @*<th>Verwijderen</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.employeetype)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.resignationdate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.reason)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dismisalnumbre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Termination.value)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Resignations", new { id = item.idresignation })"><i class="fa fa-edit"></i></a>
                                </td>
                                @*<td>
                                    <a onclick="Delete()"><i class="fa fa-trash"></i></a>
                                    <a  id="delete" href="@Url.Action("DeleteConfirmed", "Resignations", new { id = item.idresignation })"><i class="fa fa-trash"></i></a>
                                </td>*@
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.print.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#myTable1').DataTable();
             var ms = '@ViewBag.message';
            if (ms == "1") {
                Swalsuccess()
            }
        });

        function Delete() {

            swal({
                title: "Weet je zeker dat?",
                text: "Eenmaal verwijderd, kunt u het niet meer herstellen!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {

                        $("#delete").click();

                        //swal("Poof! Your imaginary file has been deleted!", {
                        //    icon: "success",
                        //});


                    }
                });

        }

    </script>
}
