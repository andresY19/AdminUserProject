        $("#statusperson").val('@ViewBag.statusperson');
        $("#sex").val('@ViewBag.sex');
        $("#employeetype").val('@ViewBag.employeetype');


        $("#identitynumber")
            .focusout(function () {

                var id = $("#identitynumber").val().replace("_", "").replace("_", "").replace("_", "").replace("_", "").replace("_", "").replace("_", "").replace("_", "").replace("_", "").replace("_", "").replace("_", "");


                var age = Getage(id.slice(0, 8));
                $("#age").val(age);

            });


        function Getage(date) {

            var dob = parsedate(date);
            var today = new Date();
            var age = Math.floor((today - dob) / (365.25 * 24 * 60 * 60 * 1000));
            return age;
        }

        function parsedate(str) {
            if (!/^(\d){8}$/.test(str)) return "invalid date";
            var y = str.substr(0, 4),
                m = str.substr(4, 2),
                d = str.substr(6, 2);
            return new Date(y, m - 1, d);
        }

    });

</script>