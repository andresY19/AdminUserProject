@model Queue.ViewModels.WorkPermitViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutElement.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.idemployee)
    @Html.HiddenFor(model => model.idworkpermit)
    @Html.HiddenFor(model => model.status)

    <div class="row">
        <div class="col-lg-12 col-12">
            <div class="box">
                <div class="box-header with-border">
                    <h2 class="box-title">Werkvergunning bewerken</h2>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("Index", "WorkPermits",new { idemployee = Model.idemployee })" class="btn waves-effect waves-light btn-block btn-secondary">
                        <i class="fa fa-arrow-left"></i> Back
                    </a>
                </div>
                <div class="box-body">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.licensenro, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.licensenro, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.licensenro, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.type, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.type, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.dateissue, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.dateissue, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @Html.EditorFor(model => model.dateissue, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.dateexpired, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.dateexpired, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @Html.EditorFor(model => model.dateexpired, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.targetgroup, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.targetgroup, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.targetgroup, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <div class="d-flex flex-row-reverse">
                            <div class="p-2">
                                <button id="add_dictionary" name="add_dictionary" type="submit" value="Create" class="btn btn-warning waves-effect waves-light btn-block">
                                    Edit
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script>
        $(document).ready(function () {

            $('#dateissue').datepicker({
                autoclose: true,
                format: 'dd/mm/yyyy'
            });
            $('#dateexpired').datepicker({
                autoclose: true,
                format: 'dd/mm/yyyy'
            });
        });

    </script>
}