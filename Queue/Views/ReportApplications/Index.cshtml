    function ReportMoreApplications(parameter) {
        $.ajax({
            type: "POST",
            url: "/ReportApplications/NewChart",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: JSON.stringify(parameter),
            success: async function (chData) {

                if (chData.length > 0) {
                    await $(".Spin").hide();
                    await $(".MensajeInfor").hide();
                    await $("#myChart").show();
                    Chart.defaults.global.defaultFontFamily = "Lato";
                    Chart.defaults.global.defaultFontSize = 18;
                    var arrayUser = [];


                    var dynamicColors = function () {
                        var r = Math.floor(Math.random() * 255);
                        var g = Math.floor(Math.random() * 255);
                        var b = Math.floor(Math.random() * 255);
                        return "rgb(" + r + "," + g + "," + b + ")";
                    };
                    var ListApplication = {};
                    console.log(chData)
                    chData.forEach(x => {

                        var List = JSON.parse(x);
                        ListApplication = List.Application;
                        var densityData = {
                            label: List.User ? List.User : "No se registro actividad en las fechas establecidas o el usuario no tiene registro",
                            data: List.Time,
                            backgroundColor: dynamicColors(),
                            borderWidth: 0,
                            yAxisID: "y-axis-density"
                        };

                        arrayUser.push(densityData);
                    });

                    var planetData = {
                        labels: ListApplication,
                        datasets: arrayUser
                    };

                    var chartOptions = {
                        scales: {
                            xAxes: [{
                                barPercentage: 1,
                                categoryPercentage: 0.6
                            }],
                            yAxes: [{
                                id: "y-axis-density"
                            }]
                        }
                    };

                    if (barChart != null) {
                        barChart.destroy();
                    }
                    var ctx = $("#myChart").get(0).getContext("2d");
                    barChart = new Chart(ctx, {
                        type: 'bar',
                        data: planetData,
                        options: chartOptions
                    });

                    barChart.update();

                } else {
                    await $(".Spin").hide();
                    await $(".MensajeInfor").show();
                }
            }
        });
    }

