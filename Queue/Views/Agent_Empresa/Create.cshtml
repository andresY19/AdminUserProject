@model Queue.Models.Agent_Empresa

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "Agent_Empresa", FormMethod.Post, new { id = "frm_register" }))
{
    @Html.AntiForgeryToken()

    <div id="divblock" class="row">
        <div class="col-lg-12 col-12">

            <div class="box">
                <div class="box-header with-border">
                    <h4 class="box-title">Create Company</h4>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("Index", "Agent_Empresa")" class="btn btn-info btn-block m-t-10 float-right">
                        <i class="fa fa-plus"></i> Back
                    </a>
                </div>

                <div class="box-body">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control required" } })
                                </div>
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.Direccion, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control required" } })

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-phone"></i>
                                    </div>
                                    @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control required" } })
                                </div>
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-at"></i>
                                    </div>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control required", @type = "email" } })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.Rut, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.Rut, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Rut, new { htmlAttributes = new { @class = "form-control required" } })
                                </div>
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.Key, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.Key, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Key, new { htmlAttributes = new { @class = "form-control required" } })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <div class="d-flex flex-row-reverse">
                        <div class="p-2">
                            <button id="add_company" name="add_dictionary" type="submit" value="Create" class="btn btn-info waves-effect waves-light btn-block">
                                Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

