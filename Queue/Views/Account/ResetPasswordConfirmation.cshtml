@{
    ViewBag.Title = "Reset password confirmation";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<h3 class="box-title m-b-20">@ViewBag.Title.</h3>
<div>
    <p>
        Your password has been reset.
    </p>
</div>
@using (Html.BeginForm("Login", "Account"))
{
    @Html.AntiForgeryToken()
    <div class="form-group text-center m-t-20">
        <div class="col-xs-12">
            <button class="btn btn-warning btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Here to Login</button>
        </div>
    </div>
}