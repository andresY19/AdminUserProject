@model IEnumerable<Queue.Models.Agent_GroupHorary>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card">
            <div class="box-header with-border">
                <h4 class="box-title">Gruop Horary</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                    </div>
                    <br />
                    <br />
                    <br />

                    <div class="col-md-2">
                        <a href="@Url.Action("Create", "Agent_GroupHorary", new { id = ViewBag.IdGroupHorary })" class="btn btn-info btn-sm m-t-10 float-right">
                            <i class="fa fa-plus"></i> New Gruop Horary
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="myTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NameGroup)
                                </th>
                                <th>
                                    Edit
                                </th>
                                <th>
                                    Detail
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameGroup)
                                    </td>
                                    <td style="text-align:center">
                                        <a class="btn btn-outline-secondary" href="@Url.Action("Edit", "Agent_GroupHorary", new { id = item.Id_GroupHorary })"><i class="fa fa-edit"></i></a>
                                    </td>
                                    <td style="text-align:center">
                                        <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Agent_GroupHoraryDetail", new { id = item.Id_GroupHorary })"><i class="fa fa-laptop"></i></a>
                                    </td>
                                </tr>
}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.print.min.js"></script>
    <script>$('#myTable').DataTable();</script>
}