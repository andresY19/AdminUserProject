@model Queue.Models.Agent_Job

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Agent_Job", FormMethod.Post, new { id = "frm_register" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.idJob)

    <div id="divblock" class="row">
        <div class="col-lg-12 col-12">
            
            <div class="box">
                <div class="box-header with-border">
                    <h4 class="box-title">Edit Job and Schedule</h4>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("Index", "Agent_Employee")" class="btn btn-info btn-block m-t-10 float-right">
                        <i class="glyphicon glyphicon-chevron-left"></i> Back
                    </a>
                </div>

                <div class="box-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.Cargo, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.Cargo, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-user-circle"></i>
                                    </div>
                                    @Html.EditorFor(model => model.Cargo, new { htmlAttributes = new { @class = "form-control required" } })
                                </div>
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                <div class="input-group">                                   
                                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control required" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.HorarioIniciaLunes, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.HorarioIniciaLunes, "", new { @class = "text-danger" })
                                <div class="input-group">                                   
                                    @Html.EditorFor(model => model.HorarioIniciaLunes, new { htmlAttributes = new { @class = "form-control required", @type = "Time" } })
                                </div>
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.HorarioTerminaLunes, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.HorarioTerminaLunes, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-phone"></i>
                                    </div>
                                    @Html.EditorFor(model => model.HorarioTerminaLunes, new { htmlAttributes = new { @class = "form-control required", @type = "Time" } })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    <select class="form-control select2" id="string_status" name="string_status" style="width: 100%;">
                                        <option id="1">Active</option>
                                        <option id="0">Inactive</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <div class="d-flex flex-row-reverse">
                        <div class="p-2">
                            <button id="edit" name="add_dictionary" type="submit" value="Create" class="btn btn-warning waves-effect waves-light btn-block">
                                Edit
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    <script>
        $(document).ready(function () {
            var status = '@ViewBag.status';
            if (status == "False") {
                $("#string_status").val("Inactive");
            }
        });
    </script>
}